<div class="headline"><h2>Recent Works</h2></div>
<div class="row margin-bottom-20">
    <% recent_works.each do |work| %>
      <div class="col-md-3 col-sm-6">
          <div class="thumbnails thumbnail-style thumbnail-kenburn">
              <div class="thumbnail-img">
                  <div class="overflow-hidden">
                   <img class="img-responsive margin-bottom-20" src="/assets/img/main/6.jpg" alt="">
                  </div>
                  <%= link_to "read more +", "#work_#{work.id}", "data-toggle"=>"modal", :class => "btn-more hover-effect" %>
              </div>
              <!--
              <div class="caption">
                <h3><%= link_to work.title, work, :class => "hover-effect" %></h3>
                <p><%= ((work.description)[0..100]+"...").html_safe %></p>
              </div>
              -->
          </div>
      </div>
       <!-- Modal -->
      <div class="modal fade" id='<%= "work_#{work.id}" %>' tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title"><%= work.title %></h4>
            </div>
            <div class="modal-body">
              <% if work.project_images.present? %>
                <img class="img-responsive" src="<%= work.project_images.first.image.url %>" alt="" >
              <% end %>
              <%= work.description.html_safe %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
    <% end %>
</div>


